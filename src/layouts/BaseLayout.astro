---
import "@/styles/main.css"

import BaseHead from "@/components/Base/BaseHead.astro"
import BaseSEO from "@/components/Base/BaseSEO.astro"
import BaseHeader from "@/components/Base/BaseHeader.astro"



type Props = {
  title: string
}
const currentPage = Astro.url.pathname
// const { pathname } = Astro.url
const { title, ...data } = Astro.props as Props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
// const { ...data } = Astro.props
// const canonicalURL = new URL(Astro.url.pathname, Astro.site)
// const currentPage = Astro.url.pathname
---

<html lang="en-us">
  <head>
    <BaseHead />
    <BaseSEO {title} canonicalUrl={canonicalURL} />
  </head>

  <body>
    <BaseHeader currentPage={currentPage} />
    <button id="themeToggle">Toggle</button>
    <main id="main-content">
      <div aria-live="polite" id="announce"></div>
    <slot />
  </main>
  </body>
</html>

<style is:global>
  
  main {
    container: layout / inline-size;
    inline-size: min(60rem, calc(100% - var(--spacing-md) * 2));
    margin-inline: auto;
    padding-block: 2rlh;
  }

  main > * + *:not(dialog):not([popover]) {
    margin-block-start: 1.5em;
  }

  main :where(p, li, h2, h3, h4) {
    max-inline-size: 72ch;
  }
  
</style>

