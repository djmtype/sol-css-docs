---
import "@/styles/main.css"

import BaseHead from "@/components/Base/BaseHead.astro"
import BaseSEO from "@/components/Base/BaseSEO.astro"
import BaseHeader from "@/components/Base/BaseHeader.astro"


type Props = {
  title: string;
  description: string; 
}
const currentPage = Astro.url.pathname
const { title, description } = Astro.props as Props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const lang = 'en-us'
const dir = 'ltr'

---

<html dir={dir} lang={lang}>
  <head>
    <BaseHead />
    <BaseSEO 
    title={title} 
    canonicalUrl={canonicalURL}
    title={title} 
      canonicalUrl={canonicalURL} 
      description={description} 
      lang={lang} 
      dir={dir} 
     />
  </head>

  <body>
    <BaseHeader currentPage={currentPage} />
    <button id="themeToggle">Toggle</button>
    <main id="main-content">
      <div aria-live="polite" id="announce"></div>
    <slot />
  </main>
  </body>
</html>


